# JobMatch Platform - Environment Configuration
# Copy this file to .env and customize as needed

# Application
APP_NAME=JobMatch
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-in-production

# Database (SQLite)
DATABASE_URL=sqlite:///./data/jobmatch.db

# Service URLs (defaults for local development)
WEBAPP_URL=http://localhost:8000
GATEWAY_URL=http://localhost:8001
DASHBOARD_URL=http://localhost:8002

# Gateway Settings
GATEWAY_TIMEOUT=5.0
GATEWAY_FALLBACK_ENABLED=true

# Logging
LOG_LEVEL=INFO
